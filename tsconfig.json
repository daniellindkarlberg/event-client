{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@envs/*": ["src/environments/*"],
      "@auth/*": ["src/app/auth/*"],
      "@core/*": ["src/app/core/*"],
      "@user/*": ["src/app/user/*"],
      "@event/*": ["src/app/event/*"],
      "@utils/*": ["src/app/utils/*"],
      "@root/*": ["src/app/*"]
    }
  },
 "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  } 
}
